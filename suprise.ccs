body {
    margin: 0;
    font-family: 'Comic Sans MS', cursive, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background: radial-gradient(circle, #ffe6f0, #ffb6c1);
    overflow: hidden;
}

.container {
    text-align: center;
    position: relative;
    z-index: 1;
}

h1 {
    font-size: 2.5em;
    color: #ff1493;
    margin-bottom: 20px;
}

p {
    font-size: 1.2em;
    color: #c71585;
    margin: 10px 20px;
    line-height: 1.4em;
}

/* Floating hearts container */
.hearts {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
}

/* Single heart style */
.heart {
    position: absolute;
    width: 25px;
    height: 25px;
    background: red;
    transform: rotate(-45deg);
    animation: floatUp linear infinite;
}

.heart::before,
.heart::after {
    content: "";
    position: absolute;
    width: 25px;
    height: 25px;
    background: red;
    border-radius: 50%;
}

.heart::before {
    top: -12.5px;
    left: 0;
}

.heart::after {
    top: 0;
    left: 12.5px;
}

@keyframes floatUp {
    0% {
        transform: translateY(0) rotate(-45deg);
        opacity: 1;
    }
    100% {
        transform: translateY(-600px) rotate(-45deg);
        opacity: 0;
    }
}

/* ========================= */
/* RESPONSIVE FOR MOBILE     */
/* ========================= */
@media screen and (max-width: 600px) {
    h1 {
        font-size: 2em;
    }
    p {
        font-size: 1em;
        margin: 10px 15px;
    }
}
